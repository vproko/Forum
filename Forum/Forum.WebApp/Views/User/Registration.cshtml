@using Forum.ViewModels.ViewModels
@model RegistrationViewModel

@{
    ViewData["Title"] = "Registration";
}

<div class="mx-auto col-8 col-sm-6 col-md-5 col-lg-4 col-xl-4">
    <form class="pt-3" asp-controller="User" asp-action="Registration" enctype="multipart/form-data" method="post" id="registration-form">
        <div class="form-group mb-0">
            <label class="form-label" asp-for="FirstName"></label>
            <input class="form-control" asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group mb-0">
            <label class="form-label" asp-for="LastName"></label>
            <input class="form-control" asp-for="LastName" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group mb-0">
            <label class="form-label" asp-for="UserName"></label>
            <input class="form-control" asp-for="UserName" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group mb-0">
            <label class="form-label" asp-for="Password"></label>
            <input class="form-control" type="password" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group mb-0">
            <label class="form-label" asp-for="ConfirmPassword"></label>
            <input class="form-control" type="password" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group mb-0">
            <label class="form-label" asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-0">
            <label class="form-label" asp-for="UserImage"></label>
            <input class="form-control" asp-for="UserImage" id="formFile" type="file" accept=".jpg, .jpeg, .bmp, .gif, .pwg">
            <span asp-validation-for="UserImage" class="text-danger"></span>
        </div>
        <br />
        <div class="text-center">
            <button class="btn register-btn reset" type="reset">Reset</button>
            &nbsp;
            <button class="btn register-btn submit" type="submit" id="registration-btn">Register</button>
            @if (ViewData["ErrorMessage"] != null)
            {
                <p class="mt-3 error-msg">@ViewData["ErrorMessage"]</p>
            }
            <div class="pt-3">
                <div class="spinner-grow d-none" role="status" id="registration-spinner">
                    <span class="visually-hidden"></span>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}