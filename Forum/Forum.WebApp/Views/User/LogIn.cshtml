@using Forum.ViewModels.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="mx-auto col-7 col-sm-5 col-md-4 col-lg-3 col-xl-3">
    <form class="pt-5" asp-controller="User" asp-action="Login" method="post" id="login-form">
        <div class="form-group mb-0">
            <label class="form-label" asp-for="UserName"></label>
            <input class="form-control" asp-for="UserName" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group mb-0">
            <label class="form-label" asp-for="Password"></label>
            <input class="form-control" type="password" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <br />
        <div class="text-center">
            <button class="btn register-btn reset" type="reset">Reset</button>
            &nbsp;
            <button class="btn register-btn submit" type="submit" id="login-btn">Login</button>
            @if (ViewData["ErrorMessage"] != null)
            {
                <p class="mt-3 error-msg">@ViewData["ErrorMessage"]</p>
            }
            <div class="pt-3">
                <div class="spinner-grow d-none" role="status" id="login-spinner">
                    <span class="visually-hidden"></span>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
