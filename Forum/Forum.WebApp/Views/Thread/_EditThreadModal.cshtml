@using Forum.ViewModels.ViewModels
@model ThreadViewModel

@{
    ViewData["Title"] = "Edit Thread";
    int pageIndex = (int)ViewData["PageIndex"];
    int pageSize = (int)ViewData["PageSize"];

}

<div class="modal fade" id="@("edit-thread-" + Model.ThreadId)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header pb-0">
                <h5 class="modal-title" id="exampleModalLabel">Edit:</h5>
            </div>
            <div class="modal-body pt-0">
                <form asp-action="UpdateThread" asp-controller="Thread" asp-route-threadId="@Model.ThreadId" asp-route-pageIndex="@pageIndex" asp-route-pageSize="@pageSize" method="post">
                    <div class="form-group">
                        <input type="hidden" asp-for="ThreadId" value="@Model.ThreadId" />
                        <input type="hidden" asp-for="CategoryId" value="@Model.CategoryId" />
                        <input type="hidden" asp-for="DateCreated" value="@Model.DateCreated" />
                        <input type="hidden" asp-for="Locked" value="@Model.Locked" />
                        <input type="hidden" asp-for="Sticky" value="@Model.Sticky" />
                        <input type="hidden" asp-for="PostsCount" value="@Model.PostsCount" />
                        <label asp-for="Title"></label>
                        <input type="text" class="form-control" asp-for="Title">
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="button" class="btn register-btn reset" data-dismiss="modal">Close</button>
                        &nbsp;
                        <button type="submit" class="btn register-btn submit">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
