@using Forum.ViewModels.ViewModels;

@{ 
    PostViewModel post = (PostViewModel)ViewData["Post"];
}

<div id="@("postID" + post.PostID)" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center">Post Reply</h4>
            </div>
            <div class="modal-body">
                <form asp-action="EditPostAsync" asp-controller="Post" asp-route-view="@ViewBag.View" asp-route-search="@ViewBag.SearchTerm" asp-route-page="@ViewBag.Page" method="post">
                    <input name="PostID" type="hidden" value="@post.PostID" />
                    <input name="UserID" type="hidden" value="@post.UserID" />
                    <input name="ThreadID" type="hidden" value="@post.ThreadID" />
                    <input name="DateCreated" type="hidden" value="@post.DateCreated" />
                    <input name="Reported" type="hidden" value="@post.Reported" />
                    <div class="form-group">
                        <textarea name="content" class="form-control" id="content" style="border-radius:7px" rows="3">@post.Content.Replace("e3f79af2", "")</textarea>
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-info btn save-btn" style="margin-right:10px">Save</button>
                        <button type="button" class="btn btn-danger close-btn" data-dismiss="modal" style="margin-left:10px">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>