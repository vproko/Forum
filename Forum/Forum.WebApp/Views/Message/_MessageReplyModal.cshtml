@using Forum.ViewModels.ViewModels
@model MessageViewModel

@{
    ViewData["Title"] = "Message Reply";
}

<div class="modal fade" id="@("message-reply-" + Model.MessageId)" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Message reply to <span style="color:coral;">@Model.SenderUsername</span></h5>
            </div>
            <div class="modal-body text-left">
                <form asp-controller="Message" asp-action="CreateMessageReply" method="post">
                    <div class="form-group mb-0">
                        <input type="hidden" asp-for="ReceiverId" value="@Model.SenderId" />
                        <input type="hidden" asp-for="SenderId" value="@Model.ReceiverId" />
                        <input type="hidden" asp-for="SenderUsername" value="@User.Identity.Name" />
                        <textarea class="form-control font-weight-bold" name="Content" rows="3"></textarea>
                    </div>
                    <div class="pt-3 text-center">
                        <button class="btn register-btn reset" data-dismiss="modal">Close</button>
                        &nbsp;
                        <button class="btn register-btn submit" type="submit">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>